<Window x:Class="RecipeApp.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" Height="200" Width="553"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Background="#80000000" CornerRadius="10" Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Welcome to Reuven-Jon's Recipe App"
                       FontSize="28"
                       FontWeight="Bold"
                       Foreground="White"
                       TextAlignment="Center"
                       Margin="0,10,0,10"/>
            <TextBlock Text="Click any button to continue"
                       FontSize="18"
                       Foreground="White"
                       Margin="0,20,0,0"
                       TextAlignment="Center"/>
        </StackPanel>
    </Border>
</Window>


