<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Application" Height="600" Width="800"
        Background="LightGray">
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Filter Controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBox x:Name="IngredientFilter" Width="120" Margin="5" ToolTip="Enter Ingredient"/>
            <ComboBox x:Name="FoodGroupFilter" Width="120" Margin="5" ToolTip="Select Food Group">
                <ComboBoxItem Content="All" IsSelected="True"/>
                <ComboBoxItem Content="Grain"/>
                <ComboBoxItem Content="Vegetable"/>
                <ComboBoxItem Content="Fruit"/>
                <ComboBoxItem Content="Protein"/>
                <ComboBoxItem Content="Dairy"/>
            </ComboBox>
            <TextBox x:Name="CaloriesFilter" Width="120" Margin="5" ToolTip="Max Calories"/>
            <Button Content="Filter Recipes" Click="FilterRecipes_Click"/>
        </StackPanel>

        <!-- Recipe List -->
        <ListView x:Name="RecipesListView" Grid.Row="1" SelectionMode="Extended" Margin="5">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Recipe Name" DisplayMemberBinding="{Binding Name}"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Add Recipe" Click="AddRecipe_Click"/>
            <Button Content="Display Ingredients" Click="DisplayIngredients_Click"/>
            <Button Content="Display Calories" Click="DisplayCalories_Click"/>
            <Button Content="Display Food Groups" Click="DisplayFoodGroups_Click"/>
            <Button Content="Exit" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>


