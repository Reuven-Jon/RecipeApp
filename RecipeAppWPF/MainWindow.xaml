<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Application" Height="600" Width="800"
        Background="Gray">
    <!-- Set the background color of the window -->
    <Window.Resources>
        <!-- Define a style for the buttons -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
    </Window.Resources>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="200"/>
        </Grid.RowDefinitions>

        <!-- Filter Controls -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <TextBox x:Name="IngredientFilter" Width="120" ToolTip="Enter Ingredient"/>
            <ComboBox x:Name="FoodGroupFilter" Width="120">
                <!-- Populate ComboBox with Food Groups -->
            </ComboBox>
            <TextBox x:Name="CaloriesFilter" Width="120" ToolTip="Max Calories"/>
            <Button Content="Filter" Click="Filter_Click"/>
            <!-- Display Ingredients Button -->
            <Button Content="Display Ingredients" Click="DisplayIngredients_Click"/>
            <!-- Display Recipes Button -->
            <Button Content="Display Recipes" Click="DisplayRecipes_Click"/>
        </StackPanel>

        <!-- Recipe List -->
        <ListView x:Name="RecipesListView" Grid.Row="1" SelectionMode="Extended">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" DisplayMemberBinding="{Binding Name}"/>
                    <!-- Add other columns as needed -->
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Alternative Visualization Placeholder -->
    </Grid>
</Window>





