<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Application" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="https://img.freepik.com/free-photo/flat-lay-food-ingredients-with-recipe-veggies_23-2148834745.jpg"/>
    </Window.Background>
    <Window.Resources>
        <!-- Define a style for buttons with hover effects -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#4CAF50"/>
            <!-- Green background -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                    <!-- Darker green on hover -->
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Center the buttons in the middle of the screen -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="#80000000">
            <!-- Slightly transparent background for better readability -->
            <Button Content="Enter Recipe Details" Click="AddRecipe_Click"/>
            <Button Content="Display Ingredients" Click="DisplayIngredients_Click"/>
            <Button Content="Display Calories" Click="DisplayCalories_Click"/>
            <Button Content="Display Food Groups" Click="DisplayFoodGroups_Click"/>
            <Button Content="Exit" Click="Exit_Click"/>
        </StackPanel>
    </Grid>
</Window>





