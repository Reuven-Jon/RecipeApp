<Window x:Class="RecipeApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Application" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="https://img.freepik.com/free-photo/flat-lay-food-ingredients-with-recipe-veggies_23-2148834745.jpg"/>
    </Window.Background>
    <Window.Resources>
        <Style TargetType="RadioButton">
            <Setter Property="Background" Value="#4CAF50"/>
            <!-- Green background -->
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="5">
                            <StackPanel Orientation="Horizontal">
                                <Ellipse Width="15" Height="15" Fill="{TemplateBinding Background}" Stroke="White" StrokeThickness="2"/>
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5,0,0,0"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsChecked" Value="True">
                    <Setter Property="Background" Value="#45A049"/>
                    <!-- Darker green when checked -->
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Center the buttons in the middle of the screen -->
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="#80000000">
            <!-- Slightly transparent background for better readability -->
            <RadioButton Content="Enter Recipe Details" GroupName="Actions" Checked="AddRecipe_Checked"/>
            <RadioButton Content="Display Ingredients" GroupName="Actions" Checked="DisplayIngredients_Checked"/>
            <RadioButton Content="Display Calories" GroupName="Actions" Checked="DisplayCalories_Checked"/>
            <RadioButton Content="Display Food Groups" GroupName="Actions" Checked="DisplayFoodGroups_Checked"/>
            <RadioButton Content="Exit" GroupName="Actions" Checked="Exit_Checked"/>
        </StackPanel>
    </Grid>
</Window>





